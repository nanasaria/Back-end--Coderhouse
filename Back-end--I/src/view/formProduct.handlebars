<header>
  <nav class="navbar">

    <div class="info-nav form-nav">
      <h1>{{title}}</h1>
      <a href="/realtimeproducts">Voltar</a>
    </div>
  </nav>
</header>

<div class="container">

  <form action="/api/products" method="post" enctype="multipart/form-data">
    <label for="title">Título
      <input type="text" id="title" name="title" />
    </label>

    <label for="description">Descrição
      <input type="text" id="description" name="description" />
    </label>

    <div class="input-price-code">
      <label for="price">Preço
        <input type="text" id="price" name="price" class="price" />
      </label>

      <label for="code">Código
        <input type="text" id="code" name="code" class="code" />
      </label>

    </div>

    <div class="input-stock-category">
      <label for="stock">Estoque
        <input type="text" id="stock" name="stock" class="stock" />
      </label>

      <label for="category">Categoria
        <input type="text" id="category" name="category" class="category" />
      </label>
    </div>

    <input type="file" name="file" id="file" />

    <button class="btn-form" type="submit">Enviar</button>
  </form>

</div>

<script>
  document.querySelector('form').addEventListener('submit', async (e) => {
  e.preventDefault(); try { const formData = new FormData(e.target); const
  response = await fetch(e.target.action, { method: 'POST', body: formData, });
  const data = await response.json(); window.location.href =
  '/realtimeproducts'; } catch (error) { console.error('Erro na requisição:',
  error.message); alert('Erro ao criar produto'); } });

</script>